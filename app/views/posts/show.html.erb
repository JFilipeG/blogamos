<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.author %>
</p>

<% @post.comments.each do |comment| %>
  <hr/>
  <%= render comment %>
<% end %>
<hr/>

<%= link_to 'New Comment', new_post_comment_path(@post) %> |
<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
